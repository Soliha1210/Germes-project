extends ../blocks/temp2.pug

block content
    .slider_sale 
        .red
            .sale_text До 12 ноября: скидки на кирпич 30%
            button.sale Посмотреть товары
                
    .product 
        .container
            .product_menu
                .ul.breadcrumbs
                    li.item: a(href="index.html").link Главная
                    li.item Каталог
                    li.item Кирпич
                    li.item Кирпич огнеупорный ШБ-5
            .product_title Кирпич огнеупорный ШБ-5
            .row 
                .col-6
                    .product_price 
                        .price_images
                            .price_image(style='background-image:url(assets/img/price.svg)') 
                        .price_im
                            .price_image2(style='background-image:url(assets/img/today.svg)')  
                            .logo(style='background-image:url(assets/img/logotip.png)')     
                        .product_birck 
                            .birck
                                img(src="../assets/img/brick.png", alt="")
                        .product_photo 
                            .pro_photo 
                                img(src="../assets/img/birck1.png", alt="")
                            .pro_photo2 
                                img(src="../assets/img/brick2.png", alt="")
                            .pro_photo3 
                                img(src="../assets/img/brick3.png", alt="")
                            .pro_photo4 
                                img(src="../assets/img/birck4.png", alt="")
                .col-6
                    .product_buy 
                        .pro
                            .product_text Производитель:
